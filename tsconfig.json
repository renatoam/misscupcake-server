{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@base/*": ["src/modules/base/*"],
      "@cart/*": ["src/modules/cart/*"],
      "@product/*": ["src/modules/product/*"],
      "@shared/*": ["src/modules/shared/*"],
      "@database": ["src/database"]
    }
  },
  "include": ["src/**/*"]
}
